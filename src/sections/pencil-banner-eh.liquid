<div data-section-id="{{ section.id }}" data-section-type="pencil-banner">
  <a href="{{ section.settings.link }}">
    <div class="pencil-banner">
      <h3>{{ section.settings.content }}</h3>
    </div>
  </a>
</div>

{% schema %}
  {
    "name": "Pencil Banner - eHouse",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Banner Link"
      }
    ]
  }
{% endschema %}
